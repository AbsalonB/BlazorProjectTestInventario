@using Business
@using Entities
@inject NavigationManager NavManager
    <div>
        <EditForm Model="oWarehouseEntity">
            <div class="form-group">
                <label>Referencia:</label>
                <InputText class="form-group" @bind-Value="oWarehouseEntity.WarehouseId" />
            </div>
            <div class="form-group">
                <label>Nombre del almacen:</label>
                <InputText class="form-group" @bind-Value="oWarehouseEntity.WarehouseName"/>
            </div>
            <div class="form-group">
                <label>Dirección del almacen</label>
                <InputTextArea class="form-group" @bind-Value="oWarehouseEntity.WarehouseAddress"/>
            </div>
            <input type="button" value="Agregar Almacen" @onclick="SaveWarehouse" class="form-control btn btn-dark"/>
        </EditForm>
    </div>
    <a href="category/list">Regresar</a>
@code {
    WarehouseEntity oWarehouseEntity = new WarehouseEntity();

    private void SaveWarehouse()
    {
        B_Warehouse.CreateWarehouse(oWarehouseEntity);
        NavManager.NavigateTo("warehouse/list");
    }
}
